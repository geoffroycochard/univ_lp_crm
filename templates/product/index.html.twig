{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.price|format_currency('EUR', {rounding_mode: 'floor'}) }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="button primary small">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="button secondary small">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class="button primary">Create new</a>
{% endblock %}
