{% block title %}Opportunity{% endblock %}

{% block body %}
    <h1>Opportunity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opportunity.id }}</td>
            </tr>
            <tr>
